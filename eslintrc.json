{
  "env": {
    "browser": true,
    "jquery": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "plugins": ["json"],
  "rules": {
    "indent": ["error", 2],
    "keyword-spacing": "error",
    "linebreak-style": "error",
    "no-console": "off",
    "no-extra-boolean-cast": "off",
    "quotes": ["error", "single"],
    "semi": "error",
    "space-before-blocks": "error",
    "space-before-function-paren": "error"
  }
}
